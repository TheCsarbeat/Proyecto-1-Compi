! Procedimientos mutuamente recursivos, más uno auxiliar que está adelante
! El error es la ocurrencia aplicada de x en Pong. x no debe estar visible allí­


let

  rec

    proc Ping (x : Integer) ~ if x > 0 then Impr ('I') ; Pong (x - 1) else skip end end

    |

    proc Pong (a : Integer) ~ if x > 0 then Impr ('0') ; Ping (a - 1) else skip end end  ! x no debe ser visible en Pong

    |

    proc Impr (c : Char) ~ put (c) end

  end

in

  Ping (4)

end
